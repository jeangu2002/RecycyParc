
{% if conteneurs %}
    <div id="myModal" class="modal fade" role="dialog" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Occupation des conteneurs</h4>
                </div>
                <div class="modal-body">
                    <table class="table" >
                        <tr>
                            <th>emplacement</th>
                            <th>type de déchets</th>
                            <th>volume</th>
                            <th>remplissage</th>
                                {% if is_granted('ROLE_GERANT') %}
                                <th></th>
                                {% endif %}
                        </tr>
                        {% for conteneur in conteneurs %}
                            <tr>
                                <td>{{conteneur.emplacement}}</td>
                                <td>{{conteneur.dechets.nom}}</td>
                                <td>{{conteneur.contenance}}</td>
                                <td>{{((conteneur.niveau/conteneur.contenance)*100)|round}}%</td>
                                {% if is_granted('ROLE_GERANT') %}
                                    <td><a href="{{path('cloture_conteneur',{id:conteneur.id})}}">clôturer</a></td>
                                {% endif %}
                            </tr>
                        {% endfor %}

                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">fermer</button>
                </div>
            </div>
        </div>
    </div>
{% endif %}


