{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <a href={{path("dechet_create")}}>Ajouter un type de déchets</a>
    
    {% if(dechets) %}
        <div class="table-responsive">
                <table id="menage-table"  class="table table-bordred table-striped">
                    <thead>
                        <th>libellé</th>
                        <th>volume de base</th>
                        <th>quota</th>
                        <th>emplacement</th>
                        <th></th>
                        <th></th>
                    </thead>
                    <tbody>
                        
                {% for dechet in dechets %}
                    <tr>
                        <td>{{dechet.nom}}</td>
                        <td>{{dechet.volumeDeBase}}</td>
                        <td>{{dechet.quota}}</td>
                        <td>
                            <p data-placement="top" data-toggle="tooltip" title="Modifier">
                                <button class="btn btn-primary btn-xs" data-title="Modifier"  >
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </button>
                            </p>
                        </td>
                        <td>
                            <p data-placement="top" data-toggle="tooltip" title="Supprimer">
                                <button class="btn btn-danger btn-xs" data-title="delete" data-toggle="modal" data-target="#delete" >
                                    <span class="glyphicon glyphicon-trash"></span>
                                </button>
                            </p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
                                 
           </div>
        
    {%endif%}
</div>
{% endblock %}